{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	{{include ('./nav.html.twig')}}
	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Datetime</th>
				<th>Image</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.datetime ? product.datetime|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.image }}</td>
					<td>
						<a href="{{ path('app_crud_product_show', {'id': product.id}) }}">show</a>
						<a href="{{ path('app_crud_product_edit', {'id': product.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_crud_product_new') }}">Create new</a>
{% endblock %}
